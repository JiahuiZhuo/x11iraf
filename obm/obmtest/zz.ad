Xtapemon*stringForm*nfilesText.fromVert:	acmodeLabel
Xtapemon*stringForm*nfilesText.fromHoriz:	nfilesLabel
Xtapemon*stringForm*nfilesText.width:		55

Xtapemon*stringForm*fileLabel.label:		File:
Xtapemon*stringForm*fileLabel.fromVert:		acmodeLabel
Xtapemon*stringForm*fileLabel.fromHoriz:	nfilesText
Xtapemon*stringForm*fileText.fromVert:		acmodeLabel
Xtapemon*stringForm*fileText.fromHoriz:		fileLabel
Xtapemon*stringForm*fileText.width:		62

Xtapemon*stringForm*recordLabel.label:		Record:
Xtapemon*stringForm*recordLabel.fromVert:	acmodeLabel
Xtapemon*stringForm*recordLabel.fromHoriz:	fileText
